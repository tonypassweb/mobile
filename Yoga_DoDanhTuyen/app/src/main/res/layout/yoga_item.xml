<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/yoga_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/yoga_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Yoga 1"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/yoga_id_txt"
                app:layout_constraintTop_toTopOf="@+id/yoga_id_txt" />

            <TextView
                android:id="@+id/yoga_type_of_class_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of class 1"
                android:textColor="#A9A9A9"
                app:layout_constraintStart_toStartOf="@+id/yoga_time_txt"
                app:layout_constraintTop_toBottomOf="@+id/yoga_time_txt" />

            <TextView
                android:id="@+id/yoga_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#A9A9A9"
                android:textSize="11dp"
                app:layout_constraintStart_toStartOf="@+id/yoga_type_of_class_txt"
                app:layout_constraintTop_toBottomOf="@+id/yoga_type_of_class_txt" />

            <TextView
                android:id="@+id/yoga_capacity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="12dp"
                android:text="120"
                android:textColor="#A9A9A9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/yoga_duration_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:05:30"
                android:textColor="#A9A9A9"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/yoga_capacity_txt"
                app:layout_constraintTop_toBottomOf="@+id/yoga_capacity_txt" />

            <TextView
                android:id="@+id/yoga_day_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Monday"
                android:textColor="#A9A9A9"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/yoga_duration_txt"
                app:layout_constraintTop_toBottomOf="@+id/yoga_duration_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>